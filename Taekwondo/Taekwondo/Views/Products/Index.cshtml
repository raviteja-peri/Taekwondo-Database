@model IEnumerable<Taekwondo.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Create New", "Create","",htmlAttributes:new { @class="btn"})
</p>
<table class="table table-dark">
    <tr>
        <th>
            @Html.DisplayName("Product ID")
        </th>
        <th>
            @Html.DisplayName("Product Type")
        </th>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Description")
        </th>
        <th>
            @Html.DisplayName("Selling Price")
        </th>
        <th>
            @Html.DisplayName("Cost Price")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
           $@Html.DisplayFor(modelItem => item.SellingPrice)
        </td>
        <td>
           $@Html.DisplayFor(modelItem => item.CostPrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductID },htmlAttributes:new { @class="btn" }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProductID },htmlAttributes:new { @class="btn" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductID },htmlAttributes:new { @class="btn" })
        </td>
    </tr>
}

</table>
