@model Taekwondo.Models.Class

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>

<div>
    <h4>Class Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Start Time")
        </dt>

        <dd>
            @Model.ClassStartTime.ToString("hh:mm tt")
        </dd>

        <dt>
            @Html.DisplayName("End Time")
        </dt>

        <dd>
            @Model.ClassEndTime.ToString("hh:mm tt")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Day)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Day)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ClassID },htmlAttributes: new { @class="btn"}) |
    @Html.ActionLink("Back to List", "Index",new {/* */},htmlAttributes: new { @class="btn"})
</p>
