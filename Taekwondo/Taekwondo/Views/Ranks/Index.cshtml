@model IEnumerable<Taekwondo.Models.Rank>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ranks</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-dark">
    <tr>
        <th>
            @Html.DisplayName("Rank ID")
        </th>
        <th>
            @Html.DisplayName("Belt Color")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.RankID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BeltColor)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.RankID },htmlAttributes:new { @class = "btn" }) |
        @Html.ActionLink("Details", "Details", new { id = item.RankID },htmlAttributes:new { @class = "btn" }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.RankID },htmlAttributes:new { @class = "btn" })
    </td>
</tr>
}

</table>
