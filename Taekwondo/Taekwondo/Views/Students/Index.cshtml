@model IEnumerable<Taekwondo.Models.Student>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="">
<br />
<h2>Student Details</h2>

<p>
    @Html.ActionLink("Create New", "Create", new {/* */}, htmlAttributes: new { @class = "btn" })
</p>
@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        Find by ID: @Html.TextBox("SearchID", ViewBag.CurrentFilter as string)
        <input class="btn" type="submit" value="Search" />
    </p>
}

<table class="table table-dark">
    <tr>
        <th>
            @Html.ActionLink("Student ID", "Index", new { sortOrder = ViewBag.IDSortParm })
        </th>
        <th>
            @Html.DisplayName("First Name")
        </th>
        <th>
            @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.DisplayName("Mobile Number")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayName("Rank")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rank.BeltColor)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.StudentID }, htmlAttributes: new { @class = "btn" }) |
                @Html.ActionLink("Details", "Details", new { id = item.StudentID }, htmlAttributes: new { @class = "btn" }) |
            </td>
        </tr>
    }

</table>


